<style>
 .pro_container {
    max-width: 1600px;
    width: 100%;
    margin: 0 auto;
    margin-top: 5%;
}

.sec_flx_pro {
    display: flex;
    max-width: 100%;  
   margin: 30px;
}
.lef_col1 {
    width: 48.5%;
    margin: 0 auto;
}
	.img_left_col {width: 100%;overflow: hidden;}
	.img_left_col img {width: 100%;}
  .img_left_col img:hover {transform: scale(1.1);}
  .img_left_col img {transform: scale(1);transition: all 0.3s;}
</style>
  <div class="pro_container">
  <div class="sec_flx_pro">
  {% for block in section.blocks %}
    <div class="lef_col1">
      <h2>This is our Magic</h2>
  <a href="#"><div class="img_left_col">
    <img src="{{block.settings.left_col | img_url: 'master'}}">
      </div></a>
      <p>Best Products in market</p>
    </div>
  {% endfor %}
  
  </div>
  
  </div>
  

{% schema %}
  {
    "name": "two_img_pro",
    "settings": [
			{
			"type": "text",
			"id": "sec_heading",
			"label": "Write section text"
			},
			  {
      "type": "select",
      "id": "color_scheme1",
      "options": [
        {
          "value": "accent-1",
          "label": "accent-1"
        },
        {
          "value": "accent-2",
          "label": "accent-2"
        },
        {
          "value": "background-1",
          "label": "background-1"
        },
        {
          "value": "background-2",
          "label": "background-2"
        }
      ],
      "default": "accent-1",
      "label": "choose background color for logo showcase",
      "info": "accent-1"
      }
],


	"blocks": [
   {
       "name": "image",
       "type": "image",
       "settings": [
      
		{
           "type": "image_picker",
           "id": "left_col",
           "label": "Choose Image for Left Horiz"
         },
		{
          "type": "url",
          "id": "img_link",
          "label": "Choose Brand Logo Link"
        }
		 
		]
     }
   ],

	 "presets": [
    {
      "name": "two_img_pro",
      "blocks": [
        
      ]
    }
  ]


  }

